{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
      "@shikitor/*": ["./packages/*/src"],
      "@shikitor/core/plugins/*": ["./packages/core/src/plugins/*"]
    },
    "jsx": "react"
  },
  "exclude": ["node_modules", "**/dist"]
}
